<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Timesheet Commit Mapping Form View -->
    <record id="view_timesheet_commit_mapping_form" model="ir.ui.view">
        <field name="name">timesheet.commit.mapping.form</field>
        <field name="model">timesheet.commit.mapping</field>
        <field name="arch" type="xml">
            <form string="Commit Mapping">
                <header>
                    <button name="action_view_commit" string="View Commit" type="object" 
                            class="btn-primary" icon="fa-code-fork"/>
                    <button name="action_view_timesheet" string="View Timesheet" type="object" 
                            class="btn-secondary" icon="fa-clock-o"/>
                    <field name="mapping_method" widget="statusbar" 
                           statusbar_visible="manual,automatic,bulk,api"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="commit_hash" class="oe_edit_only"/>
                        <h1><field name="commit_hash" readonly="1"/></h1>
                        <h3>
                            <field name="timesheet_line_id" readonly="1"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group name="commit_info" string="Commit Information">
                            <field name="commit_id" readonly="1"/>
                            <field name="repository_id" readonly="1"/>
                            <field name="commit_author" readonly="1"/>
                            <field name="commit_date" readonly="1"/>
                        </group>
                        <group name="timesheet_info" string="Timesheet Information">
                            <field name="project_id" readonly="1"/>
                            <field name="task_id" readonly="1"/>
                            <field name="timesheet_user_id" readonly="1"/>
                            <field name="timesheet_date" readonly="1"/>
                            <field name="timesheet_hours" readonly="1" widget="float_time"/>
                        </group>
                    </group>
                    
                    <group string="Mapping Details" name="mapping_details">
                        <group>
                            <field name="mapped_by" readonly="1"/>
                            <field name="mapping_date" readonly="1"/>
                            <field name="confidence_score" readonly="1" widget="progressbar" 
                                   invisible="mapping_method != 'automatic'"/>
                        </group>
                    </group>
                    
                    <group string="Description">
                        <field name="description" nolabel="1" placeholder="Optional description or notes about this mapping..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Timesheet Commit Mapping Tree View -->
    <record id="view_timesheet_commit_mapping_tree" model="ir.ui.view">
        <field name="name">timesheet.commit.mapping.tree</field>
        <field name="model">timesheet.commit.mapping</field>
        <field name="arch" type="xml">
            <list string="Commit Mappings" multi_edit="1" sample="1"
                  decoration-info="mapping_method == 'automatic'">
                <field name="commit_hash"/>
                <field name="commit_message"/>
                <field name="timesheet_line_id"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="timesheet_user_id"/>
                <field name="mapping_method" widget="badge"/>
                <field name="mapping_date" widget="datetime"/>
                <field name="mapped_by"/>
                <field name="confidence_score" widget="progressbar" 
                       invisible="mapping_method != 'automatic'"/>
                <field name="description"/>
                <button name="action_view_commit" string="View Commit" type="object" 
                        icon="fa-code-fork" class="btn-link"/>
                <button name="action_view_timesheet" string="View Timesheet" type="object" 
                        icon="fa-clock-o" class="btn-link"/>
            </list>
        </field>
    </record>

    <!-- Timesheet Commit Mapping Kanban View -->
    <record id="view_timesheet_commit_mapping_kanban" model="ir.ui.view">
        <field name="name">timesheet.commit.mapping.kanban</field>
        <field name="model">timesheet.commit.mapping</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1" quick_create="false"
                    default_group_by="project_id">
                <field name="id"/>
                <field name="commit_hash"/>
                <field name="commit_message"/>
                <field name="timesheet_line_id"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="timesheet_user_id"/>
                <field name="mapping_method"/>
                <field name="mapping_date"/>
                <field name="mapped_by"/>
                <field name="confidence_score"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary">
                                        <strong><t t-esc="record.commit_hash.value"/></strong>
                                    </div>
                                    <div class="o_secondary">
                                        <span class="badge" 
                                              t-att-class="record.mapping_method.raw_value == 'automatic' ? 'badge-info' : 
                                                          record.mapping_method.raw_value == 'manual' ? 'badge-secondary' : 
                                                          record.mapping_method.raw_value == 'bulk' ? 'badge-primary' : 'badge-dark'">
                                            <t t-esc="record.mapping_method.value"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="o_kanban_card_content">
                                <div class="o_kanban_card_lower_content">
                                    <div class="o_primary">
                                        <t t-esc="record.commit_message.value"/>
                                    </div>
                                    <div class="text-muted">
                                        <i class="fa fa-clock-o"/> <t t-esc="record.timesheet_line_id.value"/>
                                        <br/>
                                        <i class="fa fa-user"/> <t t-esc="record.timesheet_user_id.value"/>
                                    </div>
                                </div>
                                
                                <div class="o_kanban_card_lower_content">
                                    <div class="container o_kanban_card_content o_visible">
                                        <div class="row">
                                            <div class="col-12 text-muted small">
                                                Mapped by <t t-esc="record.mapped_by.value"/>
                                                <br/>
                                                <t t-esc="record.mapping_date.value"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Timesheet Commit Mapping Search View -->
    <record id="view_timesheet_commit_mapping_search" model="ir.ui.view">
        <field name="name">timesheet.commit.mapping.search</field>
        <field name="model">timesheet.commit.mapping</field>
        <field name="arch" type="xml">
            <search string="Commit Mappings">
                <field name="commit_hash" string="Commit Hash"/>
                <field name="commit_message" string="Commit Message"/>
                <field name="timesheet_line_id" string="Timesheet"/>
                <field name="project_id"/>
                <field name="task_id"/>
                <field name="timesheet_user_id"/>
                <field name="mapped_by"/>
                <field name="description"/>
                
                <filter string="Manual" name="filter_manual" 
                        domain="[('mapping_method', '=', 'manual')]"/>
                <filter string="Automatic" name="filter_automatic" 
                        domain="[('mapping_method', '=', 'automatic')]"/>
                <filter string="Bulk" name="filter_bulk" 
                        domain="[('mapping_method', '=', 'bulk')]"/>
                <filter string="Import" name="filter_import" 
                        domain="[('mapping_method', '=', 'import')]"/>
                <separator/>
                <filter string="Today" name="filter_today" 
                        domain="[('mapping_date', '>=', (context_today()).strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="This Week" name="filter_week" 
                        domain="[('mapping_date', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d 00:00:00'))]"/>
                <filter string="This Month" name="filter_month" 
                        domain="[('mapping_date', '>=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-%d 00:00:00'))]"/>
                        
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" 
                            context="{'group_by': 'project_id'}"/>
                    <filter string="Task" name="group_task" 
                            context="{'group_by': 'task_id'}"/>
                    <filter string="User" name="group_user" 
                            context="{'group_by': 'timesheet_user_id'}"/>
                    <filter string="Mapping Method" name="group_mapping_method" 
                            context="{'group_by': 'mapping_method'}"/>
                    <filter string="Repository" name="group_repository" 
                            context="{'group_by': 'repository_id'}"/>
                    <filter string="Mapping Date" name="group_mapping_date" 
                            context="{'group_by': 'mapping_date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Timesheet Commit Mapping Action -->
    <record id="action_timesheet_commit_mapping" model="ir.actions.act_window">
        <field name="name">Commit Mappings</field>
        <field name="res_model">timesheet.commit.mapping</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_timesheet_commit_mapping_search"/>
        <field name="context">{
            'search_default_filter_week': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No commit mappings found!
            </p>
            <p>
                Commit mappings will appear here when you link Git commits to timesheet entries.
                You can create mappings from the Commits view or use the bulk mapping wizard.
            </p>
        </field>
    </record>

</odoo>
